@model IEnumerable<CYJ.Models.GOALACTUAL>
@{
    ViewBag.Title = "Goals";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}
<h2>Goals</h2>
<p>
    @Html.ActionLink("Create a New Goal", "Create") |
    @Html.ActionLink("Back to all Goals", "Index")
</p>
@using (Html.BeginForm())
{
    <p>
        Filter by Fiscal Year: @Html.TextBox("searchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QUARTEROPTION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.actualGoal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.goalValue)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.fiscalYear)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.SUBCATEGORy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WORKSTREAM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TEAM)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.quarteroptionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.actualGoal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.goalValue)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.fiscalYear)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.subcategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.workstreamID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.teamID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.goalActualID }) |
                @Html.ActionLink("Details", "Details", new { id = item.goalActualID })
                @*@Html.ActionLink("Delete", "Delete", new { id=item.goalID })*@
            </td>
        </tr>
    }
</table>
